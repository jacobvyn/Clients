<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_pager_item_photo_image_view"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/view_pager_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pager_item_photo_image_view"
        android:layout_centerHorizontal="true"
        android:text="Hello "
        android:textColor="@color/black"
        android:textSize="@dimen/text_18_sp"
        android:textStyle="bold" />

</RelativeLayout>